# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/telegram_marketplace

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
WEBAPP_URL=https://yourdomain.com

# TON Blockchain Integration
TON_WALLET_MANIFEST_URL=https://yourdomain.com/tonconnect-manifest.json
VITE_TON_MANIFEST_URL=https://yourdomain.com/tonconnect-manifest.json

# Security Keys
JWT_SECRET=your_jwt_secret_here_minimum_32_characters
SESSION_SECRET=your_session_secret_here_minimum_32_characters

# Server Configuration
NODE_ENV=development
PORT=5000

# Optional: External Services
REDIS_URL=redis://localhost:6379
SENTRY_DSN=your_sentry_dsn_for_error_tracking

# Optional: Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Optional: File Upload (AWS S3 or similar)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_BUCKET_NAME=your_bucket_name
AWS_REGION=us-east-1